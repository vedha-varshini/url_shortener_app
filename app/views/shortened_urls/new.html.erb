<h2>Shorten a URL</h2>

<%= form_with model: @shortened_url, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :original_url %>
    <%= form.text_field :original_url, class: "form-control", placeholder: "Enter the original URL" %>
  </div>
  <%= form.submit "Shorten", class: "btn btn-primary" %>
<% end %>
