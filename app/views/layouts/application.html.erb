<!DOCTYPE html>
<html>
<head>
  <title>URL Shortener</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Rails UJS and Importmap -->
  <%= javascript_importmap_tags %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 py-2">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">URL Shortener</a>

      <div class="d-flex align-items-center ms-auto">
        <% if user_signed_in? %>
          <span class="text-white me-2">Hi, <%= current_user.email %>!</span>

          <% if current_user.admin? %>
            <%= link_to 'Admin Panel', admin_users_path, class: 'btn btn-warning btn-sm ms-2' %>
          <% end %>

            <%= link_to 'Logout', logout_path, class: 'btn btn-danger btn-sm ms-2' %>
        <% else %>
          <%= link_to 'Login', login_path, class: 'btn btn-outline-light btn-sm ms-2' %>
          <%= link_to 'Sign Up', signup_path, class: 'btn btn-primary btn-sm ms-2' %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <%= yield %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>
